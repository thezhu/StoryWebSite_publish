@model StoryWebSite.Models.Comment

@{
    ViewData["Title"] = "AddComment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add a Comment</h1>
<hr />
<div>
    <form asp-action="AddComment">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="CommentId" />
        <div class="form-group row">
            <label asp-for="Content" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-6">
                <textarea class="form-control" asp-for="Content" type="text" rows="5"></textarea>
            </div>
            <span asp-validation-for="Content"></span>
        </div>
        <div>
            <input type="hidden" asp-for="ReviewTime" />
        </div>
        <div class="form-group row">
            <input type="submit" class="btn btn-primary mb-2" value="Save" />
        </div>
    </form>
</div>


<div>
    <a asp-action="Index">Back to Home Page</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
