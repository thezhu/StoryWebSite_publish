@model StoryWebSite.Models.Story

@{
    ViewData["Title"] = "Create Story";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Story</h1>
<hr />
<div>
    <form asp-action="CreateStory">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <label asp-for="Title" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="Title" />
            </div>
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group row">
            <label asp-for="isPublic" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-2">
                @Html.DropDownListFor(model => model.isPublic, ViewBag.isPublic as List<SelectListItem>, "  -------Select List------", htmlAttributes: new { @class = "form-control" })
            </div>
            <span asp-validation-for="isPublic"></span>
        </div>
        <div class="form-group row">
            <label  class="col-sm-1 col-form-label"></label>
            <div class="col-sm-10" style="font-size:small; line-height:50%">
                <p>( Yes: Your story is accessible to every user.</p>
                <p>No: Your story is only accessible to yourself. )</p>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CreateTime" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-10">
                <input readonly class="form-control-plaintext" asp-for="CreateTime" />
            </div>
        </div>
        <div class="form-group row">
            <input type="submit" class="btn btn-primary mb-2" value="Create" />
        </div>
    </form>
</div>

<div>
    <a asp-action="UserDetail">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
